        </Grid>
        <Border Grid.Row="2"
                BorderBrush="DarkGray"
                BorderThickness="0 0 0 2"
                Padding=" 20 10">
            <StackPanel Orientation="Horizontal"
                        Spacing="5"
                        HorizontalAlignment="Right">
                <Button Content="Cansel"
                        Classes="Flat"
                        Command="{Binding CanselCommand}" />
