                    <!--                 Content="With many answers" -->
                    <!--                 CornerRadius="0"/> -->
                    <!--     </ComboBoxItem> -->
                    <!-- </ComboBox.Items> -->
                </ComboBox>
            </DockPanel>
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Queries}">
                <ListBox.DataTemplates>
                    <DataTemplate x:DataType="vm:QueryTestTeacherViewModel">
                        <Border BorderBrush="DarkGray"
                                BorderThickness="0 0 0 2"
                                Padding="20">
                            <TextBlock Text="{Binding QueryString}" />
                        </Border>
                    </DataTemplate>
                </ListBox.DataTemplates>
                
